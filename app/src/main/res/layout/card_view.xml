<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="#78c6f7">

    <TextView

        android:textSize="15dp"
        android:padding="5dp"
        android:id="@+id/weather"
        android:text="Weather : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView

        android:textSize="15dp"
        android:padding="5dp"
        android:id="@+id/weathername"
        android:text="fine"
        android:layout_toRightOf="@+id/weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:padding="5dp"
        android:id="@+id/clouds"
        android:layout_below="@+id/weather"
        android:text="Clouds:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="15dp"
        android:padding="5dp"
        android:id="@+id/cloudss"
        android:layout_below="@+id/weather"
        android:layout_toRightOf="@+id/clouds"
        android:text="fine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="15dp"
        android:padding="5dp"
        android:id="@+id/wind"
        android:layout_below="@+id/clouds"
        android:text="Wind : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="15dp"
        android:padding="5dp"
        android:id="@+id/winds"
        android:text="fine"
        android:layout_toRightOf="@id/wind"
        android:layout_below="@+id/clouds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:textSize="15dp"
        android:padding="5dp"
        android:id="@+id/date"
        android:layout_below="@+id/wind"
        android:text="Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="15dp"
        android:padding="5dp"
        android:id="@+id/dates"
        android:layout_below="@+id/wind"
        android:layout_toRightOf="@id/date"
        android:text="fine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>