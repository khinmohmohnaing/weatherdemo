<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".activity.DetailActivity">
    <ImageView
        android:id="@+id/detailimg"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/detailweather"
        android:text="Weather : "
        android:textSize="20dp"
        android:layout_margin="5dp"
        android:layout_below="@+id/detailimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/detailweathers"
        android:text="Weather : "
        android:textSize="20dp"
        android:layout_margin="5dp"
        android:layout_below="@+id/detailimg"
        android:layout_toRightOf="@+id/detailweather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/detailcloud"
        android:text="Clouds : "
        android:textSize="20dp"
        android:layout_margin="5dp"
        android:layout_below="@+id/detailweather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/detailclouds"
        android:text="Weather : "
        android:textSize="20dp"
        android:layout_margin="5dp"
        android:layout_below="@+id/detailweather"
        android:layout_toRightOf="@+id/detailcloud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/detailwind"
        android:text="Weather : "
        android:textSize="20dp"
        android:layout_margin="5dp"
        android:layout_below="@+id/detailcloud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/detailwinds"
        android:text="Weather : "
        android:textSize="20dp"
        android:layout_margin="5dp"
        android:layout_below="@+id/detailcloud"
        android:layout_toRightOf="@id/detailwind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/detaildate"
        android:text="Weather : "
        android:textSize="20dp"
        android:layout_margin="5dp"
        android:layout_below="@+id/detailwind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/detaildates"
        android:text="Weather : "
        android:textSize="20dp"
        android:layout_margin="5dp"
        android:layout_below="@+id/detailwind"
        android:layout_toRightOf="@+id/detaildate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>